<h1><%= @sheep.nickname %></h1>
<div>
<p> <%= @sheep.nickname.capitalize %> can crop <%=@sheep.square_meter_per_hour%> meters square per hour. </p>
</div>
<div>
<p>Price : <%=@sheep.price_per_day %> euros per day</p>
</div>
<% if policy(@sheep).edit? %>
  <%= link_to "Edit", edit_sheep_path(@sheep) %>
<% end %>

<% if !policy(@sheep).edit? %>
  <div>
    <%= simple_form_for([@sheep, @booking]) do |f| %>
    <%= f.error_notification %>
    <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

    <div class="form-inputs">
      <%= f.input :start_date, html5: true %>
      <%= f.input :end_date, html5: true %>
    </div>
    <div class="form-actions">
      <%= f.button :submit %>
    </div>
  <% end %>
  </div>
<% end %>

<%= link_to "Back to all sheeps", sheeps_path %>
